{% extends "base.j2" %}
{% block title %}
Index
{% endblock %}
{% block content %}

<h2>Hey it's me ur pp</h2>
<div>
	<h3> Phones </h3>
	<table>
		<tr>
			<th>ID</th>
			<th>Name</th>
			<th>MAC Address</th>
			<td><a href="{{ url_for('new_phone') | safe }}">New</a>

		</tr>
			{% for phone in phones %}
			<tr>
				<td>{{ phone.id }}</td>
				<td>{{ phone.name }}</td>
				<td>{{ phone.mac_address }}</td>
				<td><a href="{{ url_for('edit_phone', id=phone.id ) | safe }}">Edit</a></td>
			</tr>
			{% endfor %}
	</table>
</div>
<div>
	<h3> Parameters </h3>
	<table>
		<tr>
			<th>ID</th>
			<th>Name</th>
			<th>Value</th>
			<th>Note</th>
			<td><a href="{{ url_for('new_param') | safe }}">New</a>

		</tr>
			{% for avail_param in avail_params %}
			<tr>
				<td>{{ avail_param.id }}</td>
				<td>{{ avail_param.base_param.name[1:] }}</td>
				<td>{{ avail_param.value }}</td>
				<td>{{ avail_param.note }}</td>
				<td><a href="{{ url_for('edit_param', id=avail_param.id ) | safe }}">Edit</a></td>
			</tr>
			{% endfor %}
	</table>
</div>

{% endblock %}