{% extends "base.j2" %}
{% block title %}
Parameters
{% endblock %}
{% block content %}
    <h3>New Parameter</h3>
    <form action="" method="post">
        <div class="pure-g">
            {{ form.hidden_tag() }}
            <div class="pure-u-1-2">
                {{ form.param.label }}
                <br />
                {{ form.param(size=24) }}
            </div>
            <div class="pure-u-1-2">
            	{{ form.value.label }}
            	<br />
            	{{ form.value }}
                <br />
                <br />
            	{{ form.note.label }}
            	<br />
            	{{ form.note }}
                <br />
                <br />
                {{ form.submit() }}
            </div>
        </div>
        <div class="pure-g">
            <div class="pure-u-1-3"></div>
            <div class="pure-u-1-3">
                
            </div>
            <div class="pure-u-1-3"></div>
        </div>
        
    </form>
{% endblock %}