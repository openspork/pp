{% extends "base.j2" %}
{% block title %}
New CA
{% endblock %}
{% block content %}

    <h3>{% block op_header %}New{% endblock %} CA</h3>
    <form action="" method="post">
        {{ form.hidden_tag() }}
        <div class="pure-g">
            <div class="pure-u-1-1">
                {{ form.name.label }}
                <br>
                {{ form.name(size=32) }}
                <br>
                <br>
                {{ form.note.label }}
                <br>
                {{ form.note(size=32) }}
            </div>
        </div>
        <br>
        <div class="pure-g">
            <div class="pure-u-1-3">
                {{ form.cert.label }}
                <br>
                {{ form.cert(class_='certInput') }}
            </div>
            <div class="pure-u-1-3">
                {{ form.private_key.label }}
                <br>
                {{ form.private_key(class_='certInput') }}
            </div>
             <div class="pure-u-1-3">
                {{ form.cert_revocation_list.label }}
                <br>
                {{ form.cert_revocation_list(class_='certInput') }}
            </div>
        </div>
        <br>

        <div class="pure-g">
            <div class="pure-u-1-1">
                {% block op_ops %}
                {% endblock %}
                <br>
                <br>
                {{ form.submit() }}<br>
            </div>
        </div>
    </form>

{% endblock %}
