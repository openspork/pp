{% extends "base.j2" %}
{% block title %}
Edit Phone
{% endblock %}
{% block content %}

    <form action="" method="post" novalidate>
        {{ form.hidden_tag() }}

        <p>
            {{ form.name.label }}<br>
            {{ form.name(size=32) }}
        </p>
        <p>
            {{ form.mac_address.label }}<br>
            {{ form.mac_address(size=32) }}
        </p>
        <p>
            {{ form.delete.label }}
        	{{ form.delete }}
        </p>
        <p>{{ form.submit() }}</p>
    </form>

{% endblock %}