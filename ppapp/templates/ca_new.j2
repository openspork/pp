{% extends "ca.j2" %}
{% block title %}
    New CA
{% endblock %}
{% block op_header %}
    New CA
{% endblock %}
{% block info %}
    <div class="pure-g">
        <div class="pure-u-1-3">
            {{ form.name.label }}
            <br>
            {{ form.name(size=32) }}
            <br>
            <br>
            {{ form.note.label }}
            <br>
            {{ form.note(size=32) }}
        </div>
        <div class="pure-u-1-3">
            {{ form.country_name.label }}
            <br>
            {{ form.country_name(size=32) }}
            <br>
            <br>
            {{ form.state_or_province_name.label }}
            <br>
            {{ form.state_or_province_name(size=32) }}
            <br>
            <br>
            {{ form.cert_revocation_list_uri.label }}
            <br>
            {{ form.cert_revocation_list_uri(size=32) }}                    
        </div>
        <div class="pure-u-1-3">
            {{ form.locality_name.label }}
            <br>
            {{ form.locality_name(size=32) }}
            <br>
            <br>
            {{ form.organization_name.label }}
            <br>
            {{ form.organization_name(size=32) }}
        </div>
    </div>
{% endblock %}
{% block cert %}
    <b>Signing Cert:</b>
    <br>
    <br>
    <div class="pure-g">
        <div class="pure-u-1-2">
            {{ form.cert.label }}
            <br>
            {{ form.cert(class_='certInput') }}
        </div>
        <div class="pure-u-1-2">
            {{ form.private_key.label }}
            <br>
            {{ form.private_key(class_='certInput') }}
        </div>
    </div>
{% endblock %}

