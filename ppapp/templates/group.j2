    <h3>{% block op_header %}{% endblock %}</h3>
    <form action="" method="post">
        {{ form.hidden_tag() }}
        <div class="pure-g">
            <div class="pure-u-1-1">
                {{ form.name.label }}
                <br>
                {{ form.name(size=32) }}
                <br>
                {{ form.type.label }}
                <br>
                {{ form.type }}
                <br>
                {{ form.cert_authority.label }}
                <br>
                {{ form.cert_authority }}
                <br>
                {{ form.note.label }}
                <br>
                {{ form.note(size=32) }}
