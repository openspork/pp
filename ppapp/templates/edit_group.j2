{% extends "base.j2" %}
{% block title %}
Edit Group
{% endblock %}
{% block content %}
    <form action="" method="post">
        {{ form.hidden_tag() }}
        <div class="pure-g">
            <div class="pure-u-1-1">
                <h3>Edit Group:</h3>
                {{ form.name.label }}
                <br>
                {{ form.name(size=32) }}
                <br>
                {{ form.type.label }}
                <br>
                {{ form.type(size=8) }}
                <br>
                {{ form.cert_authority.label }}
                <br>
                {{ form.cert_authority }}
                <br>
                {{ form.note.label }}
                <br>
                {{ form.note(size=32) }}
            </div>
        </div>
        <br>
        <div class="pure-g">
            <div class="pure-u-1-2">
                {{ form.avail_params.label }}
                <br>
                {{ form.avail_params(size=12) }}
            </div>
            <div class="pure-u-1-2">
                {{ form.active_params.label }}
                <br>
                {{ form.active_params(size=12, ) }}
            </div>
        </div>
        <br>
        <div class="pure-g">
            <div class="pure-u-1-2">
                {{ form.avail_children.label }}
                <br>
                {{ form.avail_children(size=12) }}
            </div>
            <div class="pure-u-1-2">
                {{ form.active_children.label }}
                <br>
                {{ form.active_children(size=12, ) }}
            </div>
        </div>
        <br>
        <div class="pure-g">
            <div class="pure-u-1-2">
                {{ form.avail_parents.label }}
                <br>
                {{ form.avail_parents(size=6) }}
            </div>
            <div class="pure-u-1-2">
                {{ form.active_parents.label }}
                <br>
                {{ form.active_parents(size=6, ) }}
            </div>
        </div>
        <br>
        <div class="pure-g">
            <div class="pure-u-1-1">
                {{ form.delete.label }}
                {{ form.delete }}
                <br>
                {{ form.submit() }}
            </div>
        </div>
    </form>
{% endblock %}